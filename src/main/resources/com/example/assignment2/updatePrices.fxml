<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assignment2.controller.UpdatePricesController"
      alignment="CENTER" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Update Prices"/>
    <Label text="Burrito Price:"/>
    <TextField fx:id="burritoPrice"/>
    <Label text="Fries Price:"/>
    <TextField fx:id="friesPrice"/>
    <Label text="Soda Price:"/>
    <TextField fx:id="sodaPrice"/>
    <Button text="Update Prices" onAction="#handleUpdatePrices"/>
    <Button text="Back to Dashboard" onAction="#handleBack"/>
</VBox>

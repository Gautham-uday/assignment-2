<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assignment2.controller.PaymentController"
      alignment="CENTER" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Card Number:"/>
    <TextField fx:id="cardNumberField"/>
    <Label text="Expiry Date (MM/yy):"/>
    <TextField fx:id="expiryDateField"/>
    <Label text="CVV:"/>
    <TextField fx:id="cvvField"/>
    <Label fx:id="totalPriceLabel" text="Total Price: $0.00"/>
        <Button text="Confirm Payment" onAction="#handleConfirmPayment"/>
        <Button text="Cancel" onAction="#handleCancel"/>

</VBox>

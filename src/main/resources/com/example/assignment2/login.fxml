<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.assignment2.controller.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" promptText="Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Login" onAction="#handleLogin" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Register" onAction="#showRegister" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
</GridPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.assignment2.controller.VipUpgradeController"
      spacing="10" alignment="CENTER">
    <Label text="Would you like to receive promotion information via email?"/>
    <TextField fx:id="emailField" promptText="Enter your email address"/>
    <Button text="Upgrade to VIP" onAction="#handleUpgradeToVIP"/>
    <Button text="Cancel" onAction="#handleCancel"/>
</VBox>
